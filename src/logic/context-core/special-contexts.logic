//------------------------------------------------------------------------------
// [Main Context]
//
// This is an empty context created to bootstrap the starting
// invocation to the program's main method.
//------------------------------------------------------------------------------

main_context[] = Ctx -> context(Ctx).

//------------------------------------------------------------------------------
// [Empty Context]
//
// These are empty contexts that are useful for entities that would
// not benefit from keeping any context in the first place.
//------------------------------------------------------------------------------

empty_context[] = Ctx -> context(Ctx).
empty_alloc_context[] = Ctx -> alloc_context(Ctx).

//------------------------------------------------------------------------------
// [Startup Context]
//
// This is an empty context created to bootstrap any code that is
// invoked at program startup (except for main).
//------------------------------------------------------------------------------

startup_context[] = Ctx -> context(Ctx).

//------------------------------------------------------------------------------
// [Exit Context]
//
// This is an empty context created to bootstrap any code that is
// invoke at program exit.
//------------------------------------------------------------------------------

exit_context[] = Ctx -> context(Ctx).

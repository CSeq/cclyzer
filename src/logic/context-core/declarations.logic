//------------------------------------------------------------------------------
// Context and allocation declarations and storage properties
//------------------------------------------------------------------------------

allocation(Alloc) -> .
lang:physical:storageModel[`allocation] = "ScalableSparse".
lang:physical:capacity[`allocation] = 16777216. // 2 ^ 24


//------------------------------------------------------------------------------
// [Context]
//
// We have 2 types of context, (i) one for instructions, and (ii) one
// for allocations.
//------------------------------------------------------------------------------

context(Ctx) -> .
alloc_context(ACtx) -> .

lang:entity(`context).
lang:physical:storageModel[`context] = "ScalableSparse".
lang:physical:capacity[`context] = 16777216. // 2 ^ 24

lang:entity(`alloc_context).
lang:physical:storageModel[`alloc_context] = "ScalableSparse".
lang:physical:capacity[`alloc_context] = 16777216. // 2 ^ 24


//------------------------------------------------------------------------------
// [Context Item]
//
// A context consists of a number of context items. The exact number
// of items per context, and the nature of the context items itself
// depends on the flavor of context sensitivity chosen.
//------------------------------------------------------------------------------

context_item(CtxItem) -> .

lang:entity(`context_item).
lang:physical:storageModel[`context_item] = "ScalableSparse".
lang:physical:capacity[`context_item] = 16777216. // 2 ^ 24


//------------------------------------------------------------------------------
// [Context Reachability]
//
// A function is reachable at a given context.
//------------------------------------------------------------------------------

reachable_context(Ctx, Func) -> context(Ctx), function_decl(Func).
